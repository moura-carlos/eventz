<% @events.each do |event| %>
  <section class="event">
    <div class="image">
      <%#= image_tag event.image_file_name %>
      <%# Using ActiveStorage #attachted? to check whether the Event has an image attached to it, otherwise display default image %>
      <%# if event.main_image.attached? %>
        <%#= image_tag event.main_image %>
      <%# else %>
        <%#= image_tag "placeholder.png" %>
      <%# end %>
      <%= main_image(event) %>
    </div>
    <div class="summary">
    <!--link_to event.name, event_path(event)-->
     <h2><%= link_to event.name, event %><!--same as above line--></h2>
     <h3><%= day_and_time(event) %> in <%= event.location %></h3>
      <span class="price">
        <%= price(event) %>
      </span>
      <p>
        <%= truncate(event.description, length: 35, separator: ' ') %>
      </p>
    </div>
  </section>
<% end %>

<% if current_user_admin? %>
  <section class="admin">
    <%= link_to "Add New Event", new_event_path, class: 'button' %>
  </section>
<% end %>

